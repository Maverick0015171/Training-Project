@page
@model LoginPage.Pages.Edit_pageModel
@{
}

<h2>Edit User</h2>



<form method="post" asp-asp-page-handler="Submit">
   

    <div class="form-group">
        <input type="hidden" asp-for="Customer.Id" />
        <label asp-for="@Model.Customer.Name" class="control-label">Name</label>
        <input asp-for="@Model.Customer.Name" class="form-control" />
        <span asp-validation-for="@Model.Customer.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Customer.Email" class="control-label">Email</label>
        <input asp-for="@Model.Customer.Email" class="form-control" />
        <span asp-validation-for="@Model.Customer.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Customer.Password" class="control-label">Password</label>
        <input asp-for="@Model.Customer.Password" class="form-control" type="password" />
        <span asp-validation-for="@Model.Customer.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Customer.ConfirmPassword" class="control-label"></label>
        <input asp-for="@Model.Customer.ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="@Model.Customer.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Customer.Age" class="control-label">Age :</label>
        <input asp-for="@Model.Customer.Age" class="form-control" />
        <span asp-validation-for="@Model.Customer.Age" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
